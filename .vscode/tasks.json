{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make Baza Django DB Migrations",
      "type": "shell",
      "command": "dotenv run python manage.py makemigrations"
    },
    {
      "label": "Migrate Baza Django DB",
      "type": "shell",
      "command": "dotenv run python manage.py migrate"
    },
    {
      "label": "Run Baza Django Server",
      "type": "shell",
      "command": "dotenv run python manage.py runserver",
      "problemMatcher": []
    },
    {
      "label": "Run Baza Celery",
      "type": "shell",
      "command": "dotenv run celery -A bazaback worker -l info",
      "problemMatcher": []
    }
  ]
}
